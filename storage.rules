rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Avatar images - users can only upload to their own folder
    match /avatars/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Documents - authenticated users with appropriate roles can upload
    match /documents/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Public assets - anyone can read, only admins can write
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Cash call documents - organized by cash call ID
    match /cash_calls/{cashCallId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Affiliate documents - organized by affiliate ID
    match /affiliates/{affiliateId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Temporary uploads - for processing
    match /temp/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
} 