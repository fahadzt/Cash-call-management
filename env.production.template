# Production Environment Variables
# Copy this file to .env.production and fill in your company's Firebase details

# Firebase Configuration (Get these from your company's Firebase project)
NEXT_PUBLIC_FIREBASE_API_KEY=your_company_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_company_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_company_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_company_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Application Settings
FIREBASE_USE_EMULATOR=false
NODE_ENV=production

# Optional: Analytics and Monitoring
# NEXT_PUBLIC_GA_ID=your_google_analytics_id
# SENTRY_DSN=your_sentry_dsn
